<html>
    <head>
        <title>Ultimate Arena</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <link href="arena.css" rel='stylesheet'>
        <link href="/../arena.css" rel='stylesheet'>
    </head>
    <body>
        <div class="container">

            <h2><center>The Ultimate Arena</center></h2>
            <hr>
            {% if new == 1 %}
                <h4><center>> new hero added! <</center></h4>
            {% endif %}

            <div class="col-xs-2"></div>

            <div class="col-xs-8">
                {% if players is not empty %}

                    <h4>Choose your hero:</h4>
                    {% for player in players %}
                    <form action="/arena/{{ player.getId }}" method="get">
                        <button type="submit" class="arena">-></button>
                    </form>
                    {{ player.getName }}
                    <br>
                    <br>
                    {% endfor %}
                {% endif %}

                <h4>Create a new hero:</h4>
                <form action="/heroes" method="post">
                    <button type="submit" class="arena">-></button>
                    <input id="name" name="name" type="text"
                        placeholder="NAME" maxlength="8" required autofocus>
                </form>
            </div>

